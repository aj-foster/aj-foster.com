<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <%= if @page.title do %>
      <title><%= @page.title %> &bull; <%= @site.name %></title>
    <% else %>
      <title><%= @site.name %></title>
    <% end %>
    <link rel="stylesheet" href="<%= asset "css/app.css" %>">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Oranienbaum&family=Raleway:ital,wght@0,400;1,400;1,700&display=swap" rel="stylesheet">
  </head>
  <body>
    <%= include "nav" %>
    <%= @contents %>
  </body>
</html>
